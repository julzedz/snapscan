<nav>
  <div>
    <%= link_to image_tag("https://img.icons8.com/ios-filled/48/ffffff/long-arrow-left.png"), root_path, class: "btn"  %>
  </div>
  <h1 class="color-white">LOGIN</h1>
  <h2 class="invisible">Log in</h2>
</nav>
<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password" %>
  </div>

  <div class="actions login-page">
    <%= f.submit "Log in" %>
  </div>
<% end %>
<div class="forgot-password">
<%= link_to "Forgot password?", new_password_path(resource_name) %><br />
</div>
